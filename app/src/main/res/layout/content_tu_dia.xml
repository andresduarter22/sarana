<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Tu_dia"
    tools:showIn="@layout/activity_tu_dia">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/tu_dia_titulo"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tu_dia_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:text="@string/tu_dia_fecha"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tu_dia_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:text="@string/tu_dia_usuario"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/main_divider"
        style="@style/Divider"
        android:layout_marginTop="280dp"
        android:background="#505050"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tu_dia_ingresos_btn"
        android:layout_width="92dp"
        android:layout_height="61dp"
        android:layout_marginTop="320dp"
        android:background="@color/black"
        android:text="@string/ingresosDia"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tu_dia_dolar"
        android:layout_width="64dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="328dp"
        android:background="@color/green"
        android:text="@string/dolar"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/tu_dia_ingresos_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tu_dia_tramo_largo"
        android:layout_width="280dp"
        android:layout_height="105dp"
        android:layout_marginTop="420dp"
        android:text="@string/tramo_largo"
        android:background="@color/blanquito_azulado_supongo"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tu_dia_tramo_corto"
        android:layout_width="280dp"
        android:layout_height="105dp"
        android:layout_marginTop="532dp"
        android:text="@string/tramo_corto"
        android:background="@color/green"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tu_dia_cerrar_sesion"
        android:layout_width="209dp"
        android:layout_height="34dp"
        android:layout_marginTop="666dp"
        android:layout_marginBottom="17dp"
        android:text="@string/cerrar_sesion"
        android:background="@color/red"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>