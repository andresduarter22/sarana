<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/pasa_la_tarjeta_titulo"
        android:layout_width="236dp"
        android:layout_height="132dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/monopoly_inline"
        android:text="@string/pasa_la_tarjeta_titulo"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pasa_la_tarjeta_espera"
        android:layout_width="205dp"
        android:layout_height="75dp"
        android:layout_marginTop="460dp"
        android:text="@string/pasa_la_tarjeta_espera_texto"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pasa_la_tarjeta_imagen_tarjetita"
        android:layout_width="292dp"
        android:layout_height="187dp"
        android:layout_marginTop="252dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tarjetita" />
</android.support.constraint.ConstraintLayout>